<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.skripsi.alloytravelexecutive.LihatKursiActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="110dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/kls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelas: EXECUTIVE"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginEnd="15sp"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/kytd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="kursi yang telah dipesan "
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <EditText
                    android:id="@+id/ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:text="Ket: Kuning : Telah dipesan, Biru : Telah di-booking, Hijau : Dapat dipilih atau dipesa "
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/checkBox1"
                    android:layout_alignBottom="@+id/checkBox1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor1"
                    android:layout_marginStart="38dp" />

                <TextView
                    android:id="@+id/spr"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:text="supir"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_marginEnd="23dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/checkBox2"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/nomor2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp" />

                <TextView
                    android:id="@+id/nomor3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_marginStart="27dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor4"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/checkBox4"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="19dp"
                    android:layout_alignTop="@+id/nomor4"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/nomor5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/checkBox5"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="27dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor7"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor7"
                    android:layout_marginStart="39dp" />

                <TextView
                    android:id="@+id/nomor6"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/checkBox6"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor8"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/checkBox8"
                    android:layout_alignBottom="@+id/checkBox8"
                    android:layout_toStartOf="@+id/checkBox8"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/nomor9"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor9"
                    android:layout_marginStart="39dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/nomor10"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/checkBox10"
                    android:layout_alignBottom="@+id/checkBox10"
                    android:layout_toStartOf="@+id/checkBox10"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/nomor11"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:text="11"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"/>

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/nomor11"
                    android:layout_marginStart="39dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/pinbel"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="pintu belakang"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/black"/>


                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/selesai"
                    android:text="selesai"
                    android:layout_marginLeft="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="36dp"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
   </LinearLayout >
</android.support.design.widget.CoordinatorLayout>
