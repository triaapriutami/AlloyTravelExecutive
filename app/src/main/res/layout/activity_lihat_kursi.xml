<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.skripsi.alloytravelexecutive.LihatKursiActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/kls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas: EXECUTIVE"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginEnd="15sp"/>

        <EditText
            android:id="@+id/kytd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="kursi yang telah dipesan "
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:text="Ket: Kuning : Telah dipesan, Biru : Telah di-booking, Hijau : Dapat dipilih atau dipesa " />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nomor1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/checkBox1"
            android:layout_alignBottom="@+id/checkBox1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nomor1"
            android:layout_marginStart="38dp" />

        <TextView
            android:id="@+id/spr"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:text="supir"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_marginEnd="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nomor2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="2"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/checkBox2" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/nomor2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp" />

        <TextView
