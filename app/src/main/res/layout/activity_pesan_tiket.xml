<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.skripsi.alloytravelexecutive.PesanTiketActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pesen tiket"
        android:textAlignment="center"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/nm"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nme"
            android:layout_alignBottom="@+id/nme"
            android:layout_alignParentStart="true"
            android:text="nama"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nme"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:inputType="text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/telp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="no.telpon"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tlp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/telp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/nid"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="No.Identitas"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/no"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/nid"
            android:layout_alignBottom="@+id/nid"
            android:layout_alignParentEnd="true"
            android:text="no.ktp/sim"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kota asal"
            android:textSize="20sp"
            android:id="@+id/ka1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-------------------"
            android:textSize="20sp"
            android:id="@+id/kaa"
            android:layout_marginStart="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kota tujuan"
            android:textSize="20sp"
            android:id="@+id/kt2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------------------"
            android:textSize="20sp"
            android:id="@+id/ktt"
            android:layout_marginStart="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tangkeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tanggal keberangkatan"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="20sp"
            android:id="@+id/tangkab1"
            android:layout_marginStart="254dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/nk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="no.kursi"
            android:textSize="20sp" />

        <Button
            android:id="@+id/kursi"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="110dp"
            android:text=">"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/nk" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textAllCaps="false"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#212121"
        android:id="@+id/price_textview"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/pesan"
            android:text="pesan"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/batal"
            android:text="batal"
            android:layout_marginLeft="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp" />
    </RelativeLayout>
</LinearLayout>

