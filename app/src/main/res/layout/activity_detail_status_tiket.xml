<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.skripsi.alloytravelexecutive.DetailStatusTiketActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/ka1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="kota asal"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/kaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="........."
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/kt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="kota tujuan"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/ktt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="........."
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/pergi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pergi"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pergi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="........."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/hi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga IDR"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="........."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/total2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="........."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/sts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sts2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="........."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/batas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="---------------------------"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/informasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Tiket Yang telah di booking"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/informasi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/informasi"
                    android:text="mohon dicek kembali data yang telah dimasukan, karena akan di tunjukan pada saat check-in"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="nama"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/informasi2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/nama2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/nama"
                    android:layout_alignBottom="@+id/nama"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/tel"
                    android:text="........................"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="no.telepon"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_below="@+id/nama"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".........................."
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_alignBaseline="@+id/tel"
                    android:layout_alignBottom="@+id/tel"
                    android:layout_alignStart="@+id/nk2" />

                <TextView
                    android:id="@+id/nk"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="no.kursi"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_below="@+id/tel"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/nk2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".........................."
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:layout_alignBaseline="@+id/nk"
                    android:layout_alignBottom="@+id/nk"
                    android:layout_alignStart="@+id/nama2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/batas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="---------------------------"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Data Penumpang"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="data penumpang 1"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/dp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="data penumpang 2"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/intran"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="informasi transfer"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/kontran"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="200dp"
                    android:text="konfirmasi transfer"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
